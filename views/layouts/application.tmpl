<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{if .Result}}{{.Result.Title}}{{else}}{{.Title}}{{end}} - Investment App Admin</title>
    
    <!-- QOR Admin assets -->
    {{stylesheet_tag "qor_admin_default"}}
    {{javascript_tag "qor_admin_default"}}
    
    <!-- Custom styles -->
    <link href="/admin/stylesheets/custom.css" rel="stylesheet">
    
    <!-- Additional scripts and styles -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  
  <body>
    <div class="qor-page">
      <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
        <!-- Header -->
        <header class="mdl-layout__header">
          <div class="mdl-layout__header-row">
            <span class="mdl-layout-title">{{if .Result}}{{.Result.Title}}{{else}}{{.Title}}{{end}}</span>
            <div class="mdl-layout-spacer"></div>
            
            {{if current_user}}
              <a href="{{logout_url}}" class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons">exit_to_app</i>
              </a>
            {{end}}
          </div>
        </header>
        
        <!-- Sidebar -->
        <div class="mdl-layout__drawer">
          <span class="mdl-layout-title">Investment App</span>
          <nav class="mdl-navigation">
            {{render_admin_menu}}
          </nav>
        </div>
        
        <!-- Main content -->
        <main class="mdl-layout__content qor-layout__content">
          <!-- Flash messages -->
          {{range .Flashes}}
            <div class="qor-alert qor-alert--{{.Type}}">
              <button type="button" class="mdl-button mdl-button--icon" data-dismiss="alert">
                <i class="material-icons">close</i>
              </button>
              <span>{{.Message}}</span>
            </div>
          {{end}}
          
          <!-- Main content -->
          <div class="qor-page__body">
            {{yield}}
          </div>
        </main>
      </div>
    </div>
  </body>
</html>